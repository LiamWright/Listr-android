<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_textView" tools:text="What do you want for dinner?"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent" android:textSize="24sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selection_textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="344dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/title_textView"
            app:layout_constraintVertical_bias="0.879"/>
    <TextView
            android:text="@string/selection_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selectionTitle_textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_textView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/selection_textView" app:layout_constraintVertical_bias="0.756"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickMealButton"
            tools:text="@string/selectMealButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.123" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="288dp" app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/selectMealButton"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showAllMealsButton" app:layout_constraintStart_toEndOf="@+id/pickMealButton" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.481"
            tools:text="@string/viewAll_button" android:layout_marginBottom="288dp"
            app:layout_constraintBottom_toBottomOf="parent" android:text="@string/viewAll_button"/>
</android.support.constraint.ConstraintLayout>